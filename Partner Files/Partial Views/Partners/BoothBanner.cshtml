@inherits Umbraco.Web.Mvc.UmbracoViewPage


@{
        var LogoUrl = Model.Value<IPublishedContent>("exhibitorLogo")?.Url ?? "";
        var LogoBack = (Model.Value<string>("logoBackgroundColor") != "") ? Model.Value<string>("logoBackgroundColor") : "#ffffff";
        
}
<!-- Moved to ConMain.css - 6/8/19 -->
<style>

    .plogo-background {
           background-color:@(LogoBack);
            border-radius:8px; 
            position:relative; 
            top:-75px; 
            margin-bottom:-75px;
            left:7px;
            width:360px; 
            height:150px; 
            z-index:1010;
            box-shadow: 5px 5px 20px #00000040;  <!--1px 2px #888888;-->
  
    }
    .plogo-image{
        position:absolute; 
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%); 
        max-width:340px;
        max-height:130px;
    }
    
    .pbanner {
        box-shadow: /*5px 7px*/ 2px 2px 10px #00000040;
    }

    
</style>
<div class="banner-control pbanner" id="exhibitor-@Model.Id" style="position:relative; background-repeat: no-repeat; background-image: url('@(Model.Value<IPublishedContent>("mainImage")?.Url ?? "")')">

</div>
<div style="width:100%;margin-top:0;">
  @if(@LogoUrl != "")
   {
       <div  class="plogo-background" >
        <img  class="plogo-image" src="@LogoUrl">
       </div>
   }
 </div>
    
